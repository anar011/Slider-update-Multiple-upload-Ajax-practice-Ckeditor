@model Blog


@{
    ViewData["Title"] = "Edit";
}



<div class="container my-5">
    <span class="text-danger">@ViewBag.error</span>
    <form class="forms-sample" asp-action="Edit" method="post">
        <input type="text" class="form-control" id="customFile" asp-for="Header" />
        <span class="text-danger" asp-validation-for="Header"></span>
        <input type="text" class="form-control" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
        <input type="text" class="form-control" id="customFile" asp-for="Image" />
        <span class="text-danger" asp-validation-for="Image"></span>
        <input type="text" class="form-control" id="customFile" asp-for="Date" />
        <span class="text-danger" asp-validation-for="Date"></span>
        <div class="button my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>



@section Scripts{

    <partial name="_ValidationScriptsPartial"> </partial>


}