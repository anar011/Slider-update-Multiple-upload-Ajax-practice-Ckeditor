@model SliderCreateVM

@{
    ViewData["Title"] = "Create";
}
                                                                  
              
<div class="container my-5">
                                                                 @*///(enctype="multipart/form-data")- IFormFile ile properti qoyduqda classin icerisine inputuu verende onu file kimi form submit olanda gonderecek   *@
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data" >

       
        <input class="form-control" id="customFile" asp-for="Photos" />            @* /// Photo-nu goturub onun icerisinnen   adini goturub bazaya yazmaq ,goturulen photonu file seklinde locala yazmaq  *@
                                                                            
        <span class="text-danger" asp-validation-for="Photos" ></span>     @* span-error mesajin spanin icerisinde gorsenmesi ucun *@
        <div class="button my-3">

            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

